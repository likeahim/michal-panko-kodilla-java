SELECT I.SUMMARY AS TASK, L.NAME AS TASKSLIST
FROM ISSUES I JOIN ISSUESLISTS L on L.ID = I.ISSUESLIST_ID;

SELECT I.SUMMARY AS TASK, U.FIRSTNAME, U.LASTNAME
FROM ISSUES I JOIN USERS U on I.USER_ID_ASSIGNEDTO = U.ID;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(*) AS TASKS_NUMBER
FROM ISSUES JOIN USERS U on ISSUES.USER_ID_ASSIGNEDTO = U.ID
GROUP BY U.FIRSTNAME, U.LASTNAME
HAVING COUNT(*) > 0;